varnishtest "synth.file()"

server s1 {
   rxreq
   txresp
} -start

shell {
    if [ -f ${tmpdir}/test.txt ]
    then
      rm  ${tmpdir}/test.txt
    fi
    echo  "Hello world!" > ${tmpdir}/test.txt
}

varnish v1 -vcl+backend {
    import synth from "${vmod_topbuild}/src/.libs/libvmod_synth.so";

    sub vcl_recv {
        return (synth(700, "OK"));
    }

    sub vcl_synth {
        set resp.status = 200;
        set resp.reason = "OK";
        set resp.http.Content-Type = "text/plain";
        synth.file("${tmpdir}/test.txt");
        return (deliver);
    }
} -start

client c1 {
    txreq -url "/"
    rxresp
    expect resp.body == "Hello world!\n"
} -run

varnish v1 -expect client_req == 1
